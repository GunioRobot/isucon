!!! html
html
  head
    meta(http-equiv="Content-Type", content="text/html", charset="utf-8")
    title isucon now!
    link(type="text/css", href="/css/jquery-ui-1.8.14.custom.css", rel="stylesheet")
    style
      body {margin: 10px auto 0 auto;}
      #bunner {width: 100%; padding: 0 0 10px 0; text-align: center;}
      #scoreboard {width: 100%; padding: 0 0 10px 0; text-align: center;}
      table#waku {border: 1px solid black;}
      tr.dan {height: 150px;}
      td.team {width: 250px; text-align: center; border: 1px solid;}
      table.box {width: 100%;}
      td.name {height: 50px; text-align: center;}
      td.failing {background-color: red;}
      td.latest {height: 50px; text-align: center;}
      td.highest {height: 30px; text-align: center;}
      td.bench {height: 20px; text-align: center;}
      td.running {background-color: lime;}
    script(type="text/javascript", src="/js/jquery-1.6.2.min.js")
    script(type="text/javascript", src="/js/jquery-ui-1.8.14.custom.min.js")
    script(type="text/javascript", src="/js/isucon.master.js")
  body
    #bunner
      img(src="/images/isucon_title.jpg", width="125px", height="38px", style="border: none;")
    #scoreboard
      table#waku
        - each row in [0,1,2]
          tr.dan
            - each col in [0,1,2,3,4,5,6]
              - team = teams[row * 7 + col]
              td.team(id="#{team.id}")
                table.box(style="border: 0;")
                  tr
                    td.name.failing= team.name
                  tr
                    td.latest loading...
                  tr
                    td.highest loading...
                  tr
                    td.bench.running running
    #grapharea
      | hoge