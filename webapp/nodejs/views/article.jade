#sidebar
  !{sidebar}
#articleview
  .article
    a(href="/article/#{article.id}")
      .title= article.title
    .created= article.created_at
    .body= article.body
  .comments
    - each comment in comments
      .comment
        .name= comment.name
        .created= comment.created_at
        .body= comment.body
    .commentform
      form(method="POST", action="/comment/#{article.id}")
        table
          tr
            td
              input(type="text", name="name", size=30)
          tr
            td
              textarea(name="body", cols=40, rows=4)
        input(type="submit")
